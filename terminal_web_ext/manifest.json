{
  "manifest_version": 3,
  "name": "WebSocket Logger",
  "version": "1.0",
  "description": "Logs messages from a WebSocket server",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost/*",
    "ws://localhost/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
